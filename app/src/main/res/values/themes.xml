<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 🌙 Base App Theme (MaterialComponents required colors included) -->
    <style name="Theme.AidaApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status / Nav bar settings -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- ✅ Required Material Colors (default fallback) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <!-- ☀️ Light Theme -->
    <style name="Theme.App.Light" parent="Theme.AidaApplication">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <!-- 🌑 Dark Theme -->
    <style name="Theme.App.Dark" parent="Theme.AidaApplication">
        <!-- Accent -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Background -->
        <item name="colorBackground">#121212</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Surfaces (cards, toolbar, panels) -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/on_background_dark</item>

        <!-- Status bar / nav bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- 🔵 Blue Theme -->
    <style name="Theme.App.Blue" parent="Theme.AidaApplication">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorBackground">@color/background_blue</item>
        <item name="colorOnBackground">@color/on_background_blue</item>

        <item name="colorSurface">@color/primary_blue</item>
        <item name="colorOnSurface">@color/on_background_blue</item>
    </style>

    <!-- 🟢 Green Theme -->
    <style name="Theme.App.Green" parent="Theme.AidaApplication">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorBackground">@color/background_green</item>
        <item name="colorOnBackground">@color/on_background_green</item>

        <item name="colorSurface">@color/primary_green</item>
        <item name="colorOnSurface">@color/on_background_green</item>
    </style>

</resources>
