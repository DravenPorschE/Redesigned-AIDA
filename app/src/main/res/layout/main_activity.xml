<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Original Layout Content -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Side panel -->
        <ScrollView
            android:id="@+id/scroll_side_panel"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#050505">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/side_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:alignItems="center">

                <!-- Note App -->
                <LinearLayout
                    android:id="@+id/note_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/note_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/note_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/note_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Note App"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Alarm App -->
                <LinearLayout
                    android:id="@+id/alarm_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/alarm_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alarm_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/alarm_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Alarm App"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Calendar App -->
                <LinearLayout
                    android:id="@+id/calendar_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/calendar_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/calendar_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/calendar_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Calendar App"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Meeting App -->
                <LinearLayout
                    android:id="@+id/meeting_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/meeting_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/meeting_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/meeting_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Meeting App"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Game App -->
                <LinearLayout
                    android:id="@+id/game_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/game_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/game_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/game_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Game App"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Configure App -->
                <LinearLayout
                    android:id="@+id/configure_app_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/configure_app_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/configure_app_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/configure_app_label"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Configure AIDA"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </ScrollView>

        <!-- Main content -->
        <LinearLayout
            android:id="@+id/main_content_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/draggable_button_container"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/draggable_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="30dp"
                    android:text="â˜°"/>
            </LinearLayout>

            <!-- ðŸ‘‡ Banner moved inside here -->
            <FrameLayout
                android:id="@+id/main_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Alarm Banner -->
                <LinearLayout
                    android:id="@+id/alarm_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_alarm_banner"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:elevation="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:translationY="-100dp">

                    <TextView
                        android:id="@+id/alarm_banner_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alarm is ringing!"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"/>

                    <Button
                        android:id="@+id/alarm_banner_dismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dismiss_button"
                        android:textColor="@android:color/white"
                        android:text="Dismiss"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
