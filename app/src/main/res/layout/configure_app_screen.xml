<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorBackground">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure AIDA"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Change Avatar Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnChangeAvatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/selectedAvatarPreview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Avatar"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Change Theme Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnChangeTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnChangeAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Theme"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Ringtone Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnRingtones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnChangeTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringtone"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- About AIDA Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnAboutAida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnRingtones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About AIDA"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Avatar Panel -->
    <LinearLayout
        android:id="@+id/avatarPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorBackground"
        android:elevation="8dp"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/avatarRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

        <LinearLayout
            android:id="@+id/avatarActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSaveAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnCancelAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Theme Panel -->
    <LinearLayout
        android:id="@+id/themePanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorBackground"
        android:elevation="8dp"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/themeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/themeLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Theme"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/themeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Theme"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/themeBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Theme"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/themeGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green Theme"
                android:textColor="?attr/colorOnBackground" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/themeActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSaveTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnCancelTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ringtone Panel -->
    <LinearLayout
        android:id="@+id/ringtonePanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorBackground"
        android:elevation="8dp"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/ringtoneRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ringtoneClassic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/ringtoneBeep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beep Beep"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/ringtoneGentle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gentle"
                android:textColor="?attr/colorOnBackground" />

            <RadioButton
                android:id="@+id/ringtoneWav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My WAV Sound"
                android:textColor="?attr/colorOnBackground" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/ringtoneActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSaveRingtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnCancelRingtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- About AIDA Panel -->
    <LinearLayout
        android:id="@+id/aboutAidaPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorBackground"
        android:elevation="8dp"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/aboutAidaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AIDA (Artificial Intelligence Daily Assistant) is designed to help you manage daily tasks, alarms, themes, and personal settings efficiently. It combines AI-driven assistance with customizable features for a smarter experience."
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:lineSpacingExtra="4dp"
                android:padding="8dp" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/aboutAidaActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCloseAboutAida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
